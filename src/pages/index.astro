---
// pages/index.astro
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import image1 from '../assets/img-1.jpg';
import image2 from '../assets/img-2.jpg';
import image3 from '../assets/img-3.jpg';
import image4 from '../assets/img-4.jpg';
---

<Layout>
  <Header imageSrc={image4.src} title="Pilkington Enterprises" />
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4">
    <Card title="James" image={image1.src} paragraph="Hard at work at the Casino" />
    <Card title="Becca" image={image2.src} paragraph="Looking good at the Grand Canyon" />
    <Card title="Gabriel" image={image3.src} paragraph="Our faithful companion" />
  </div>
</Layout>
